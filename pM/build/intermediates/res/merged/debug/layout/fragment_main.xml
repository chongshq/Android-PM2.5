<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/main_top_layout"
        style="@style/main_top_bg_style">

        <ImageView
            android:id="@+id/main_profile"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:src="@drawable/bt_localsonglist_move_press" />

        <TextView
            android:id="@+id/textView1"
            style="@style/main_top_center_style"
            android:text="@string/main_top_title" />

        <ImageView
            android:id="@+id/main_hot_map"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:src="@drawable/ofm_location_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/main_refresh_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/nav_refresh" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_top_layout">

        <LinearLayout
            android:id="@+id/main_info_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/main_top_f_left"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/main_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="11:30"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="20dip"
                    android:text="@string/main_top_s_left"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/main_current_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textView4"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/textView4"
                    android:text="null"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/main_add_city"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_toEndOf="@+id/main_current_city"
                    android:src="@drawable/ic_add_circle_36pt_3x" />

                <!--<TextView-->
                    <!--android:id="@+id/textView9"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignLeft="@+id/textView2"-->
                    <!--android:layout_below="@+id/textView4"-->
                    <!--android:layout_marginTop="20dip"-->
                    <!--android:text="步数"-->
                    <!--android:textSize="14dp" />-->

                <!--<TextView-->
                    <!--android:id="@+id/main_current_step"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignBaseline="@id/textView9"-->
                    <!--android:layout_marginLeft="10dip"-->
                    <!--android:layout_toRightOf="@id/textView9"-->
                    <!--android:text="0"-->
                    <!--android:textSize="14dp" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="@string/main_top_f_right"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/main_air_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView3"
                    android:text="111ssssss"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="20dip"
                    android:text="@string/main_top_s_right"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/main_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:text="易感人群"
                    android:textSize="14dp" />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/main_info_div_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/main_info_layout_1"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/main_info_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/main_info_div_1"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/main_top_t_first"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/main_hour_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_marginLeft="40dip"
                android:layout_toRightOf="@+id/textView6"
                android:text="100mg"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dip"
                android:text="@string/main_top_t_second"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/main_day_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignLeft="@+id/main_hour_pm"
                android:text="2000mg"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="20dip"
                android:text="@string/main_top_t_third"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/main_week_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignLeft="@+id/main_hour_pm"
                android:text="3000mg"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/main_density_error"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dip"
                android:src="@android:drawable/presence_busy"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/main_run_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/btn_dialog"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_info_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/main_info_layout_2"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray"></RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_info_layout"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_fig_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_chart1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"
                android:layout_toStartOf="@+id/main_chart_1_alert"
                android:text="@string/main_fig_1_title"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/main_chart_1_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/main_chart1_title"
                android:layout_marginRight="8dip"
                android:background="@color/AccentBlue"
                android:text="切换"
                android:textColor="@color/White"
                android:textSize="18dp" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/main_chart_1_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_chart_1_change"
                android:layout_marginTop="5dip"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="8dp"
                android:visibility="invisible" />

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/main_chart_1_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_chart1_title"
                android:layout_marginTop="5dip"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="8dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_chart_1_alert"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="2dp"
                android:layout_toStartOf="@+id/main_chart_1_change"
                android:src="@drawable/ic_error_outline_black_18dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_view_more_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main_chart_1_column"
                android:layout_marginRight="2dp"
                android:layout_toEndOf="@+id/main_chart1_title"
                android:text="查看"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/AccentBlue"
                android:textSize="14dp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_fig_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_fig_layout_1"
            android:layout_marginTop="10dip"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_chart2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"
                android:layout_toStartOf="@+id/main_view_more_2"
                android:text="@string/main_fig_2_title"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/main_chart_2_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/main_chart2_title"
                android:layout_marginRight="8dip"
                android:background="@color/AccentBlue"
                android:text="切换"
                android:textColor="@color/White"
                android:textSize="18dp" />


            <ImageView
                android:id="@+id/main_chart_hint_2"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/main_chart2_title"
                android:layout_marginLeft="10dip"
                android:layout_toEndOf="@+id/main_chart2_title"
                android:src="@android:drawable/ic_menu_info_details"
                android:visibility="gone" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/main_chart_2_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_chart2_title"
                android:layout_marginTop="5dip"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="8dp"
                android:visibility="invisible" />

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/main_chart_2_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_chart2_title"
                android:layout_marginTop="5dip"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="8dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_chart_2_alert"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="2dp"
                android:layout_toStartOf="@+id/main_chart_2_change"
                android:src="@drawable/ic_error_outline_black_18dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_view_more_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main_chart_2_column"
                android:layout_marginRight="2dp"
                android:layout_toStartOf="@+id/main_chart_2_alert"
                android:text="查看"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/AccentBlue"
                android:textSize="14dp"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>